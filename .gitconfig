[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = difftool
	f = fetch
	ci = commit -a
	co = checkout
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	ps = push
	pl = pull
	st = status
	sth = stash -u
	usth = stash pop stash@{0}
[user]
	name = Roman Charugin
	email = i@charugin.ru
[push]
	default = current
[color]
	ui = true
