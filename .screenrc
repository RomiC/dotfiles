select 1

caption always
caption string "%{.WK}%-w%{+b ..k}[%n %t]%{-}%+w %=%{..R} %H %{..K} %d/%m %c%a "

escape ^Bb

altscreen on

startup_message off

# make screen start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
