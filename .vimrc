set tabstop=2
set shiftwidth=2
set smarttab
set wrap
set ai
set showmatch
set hlsearch
set incsearch
set ignorecase
set ffs=unix,dos,mac
set clipboard=unnamed
set fencs=utf-8,cp1251,koi8-r,ucs-2,cp866
if has("mouse")
  set mouse=a
endif
set number
autocmd InsertEnter,InsertLeave * set cul!
syntax on
colorscheme afterglow
